---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Resume | Anthony Tranduc" description="Anthony Tranduc's Resume">
  <div class="page-header">
    <h1>Resume</h1>
    <a href="#" class="pdf-link">&gt; View as PDF</a>
  </div>

  <section>
    <h2>Work Experience</h2>

    <div class="entry">
      <div class="entry-header">
        <div>
          <h3>Amazon Robotics</h3>
          <p class="org">Westborough, MA</p>
        </div>
        <span class="date">Aug 2022 &ndash; Present</span>
      </div>
      <div class="role">
        <div class="role-header">
          <span>Software Development Engineer II</span>
          <span class="date">Apr 2024 &ndash; Present</span>
        </div>
      </div>
      <div class="role">
        <div class="role-header">
          <span>Software Development Engineer</span>
          <span class="date">Aug 2022 &ndash; Apr 2024</span>
        </div>
      </div>
      <ul>
        <li>Robotics simulation</li>
      </ul>
    </div>
  </section>

  <section>
    <h2>Education</h2>

    <div class="entry">
      <div class="entry-header">
        <div>
          <h3>Tufts University</h3>
          <p class="org">Medford, MA</p>
        </div>
        <span class="date">Sep 2018 &ndash; May 2022</span>
      </div>
      <p class="degree">BS in Computer Science, Second Major in Philosophy</p>
      <p class="degree">Summa Cum Laude</p>
      <p class="org">Vietnamese Students Club &middot; JumboCode &middot; Phi Beta Kappa</p>
    </div>
  </section>
</Layout>

<style>
  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: var(--spacing-2xl);
  }

  h1 {
    margin-bottom: 0;
  }

  .pdf-link {
    color: var(--color-text-muted);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .pdf-link:hover {
    color: var(--color-accent-primary);
    text-decoration: none;
  }

  section {
    margin-bottom: var(--spacing-2xl);
  }

  h2 {
    margin-bottom: var(--spacing-lg);
    padding-bottom: var(--spacing-sm);
    border-bottom: 1px solid var(--color-border);
  }

  .entry {
    margin-bottom: var(--spacing-xl);
  }

  .entry:last-child {
    margin-bottom: 0;
  }

  .entry-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-xs);
  }

  h3 {
    margin-bottom: 0;
  }

  .org {
    color: var(--color-text-muted);
    margin-bottom: 0;
  }

  .date {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    white-space: nowrap;
  }

  .entry p {
    margin-bottom: var(--spacing-xs);
    line-height: 1.6;
  }

  .degree {
    font-weight: 600;
    margin-top: var(--spacing-sm);
  }



  .entry ul {
    margin: var(--spacing-sm) 0;
    padding-left: var(--spacing-lg);
    list-style: none;
  }

  .entry ul li {
    color: var(--color-text);
    line-height: 1.8;
    position: relative;
    padding-left: 1.25rem;
  }

  .entry ul li::before {
    content: ">";
    position: absolute;
    left: 0;
    color: var(--color-accent-primary);
    font-weight: 700;
  }

  .role {
    padding-left: var(--spacing-md);
    border-left: 2px solid var(--color-accent-primary);
    margin-bottom: var(--spacing-sm);
  }

  .role:last-child {
    margin-bottom: 0;
  }

  .role-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--spacing-md);
    padding: var(--spacing-xs) 0;
  }

  .role-header span:first-child {
    font-weight: 600;
  }

  @media (max-width: 480px) {
    .entry-header {
      flex-direction: column;
      gap: var(--spacing-xs);
    }

    .role-header {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--spacing-xs);
    }
  }
</style>
